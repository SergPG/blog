 
<div class="card" >

  <div class="card-header">
    <div class="card-header-title">Articles</div>
    <%= link_to "New Article", new_article_path, class:"btn btn-success" %>
  </div>  

  <div class="card-body">
   
  <p> Our blog has <%= Article.public_count %> articles and counting! </p>
  
    <div class="list-articles">
      <% @articles.each do |article| %>
        <% unless article.archived? %>
      
          <div class="item-article">
            <%= link_to article.title, article,  class:"linck-item-article" %>
          </div> 
        <% end %>
      <% end %>
    </div>
  </div>
  
</div>